  <div class="table-responsive records">
    <table class="table">
      <thead>
        <tr>
          <th class="col-xs-1"></th>
          <th class="col-xs-9"></th>
          <th class="col-xs-1"></th>
          <th class="col-xs-1"></th>
        </tr>
      </thead>
      <div class="">
        <%= render "records/records" %>
      </div>
    </table>
  </div>
<% end %>
<% end %>
