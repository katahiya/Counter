<% if object.errors.any? %>
  $(".error_messages").html("<%= escape_javascript(render 'shared/error_messages', object: object) %>")
<% else %>
  $("#flash_messages").html("<%= escape_javascript(render "shared/flash_messages") %>")
  $("<%= rerender_selecter %>").html("<%= escape_javascript(render html_template, html_args) %>")
  $("<%= modal_selecter %>").modal("hide")
  filter("recorders", "show", resize_windowful)
  filter("recorders", "edit", size_options_list);
<% end %>
