<li><%= link_to "トップ", root_path %></li>
<% if logged_in? %>
  <% if current_user.admin? %>
    <li><%= link_to "Users", users_path %></li>
  <% end %>
  <li class="dropdown">
    <a href="#" class="dropdown-toggle" data-toggle="dropdown" aria-expanded="false" role="button">
     カウンター<b class="caret"></b>
    </a>
    <ul class="dropdown-menu" role="menu">
      <li><%= link_to "一覧", user_recorders_path(current_user) %></li>
      <li class="devider"></li>
      <li><%= link_to "作成", user_setup_path(current_user) %></li>
    </ul>
  </li>
  <li class="dropdown">
    <a href="#" class="dropdown-toggle" data-toggle="dropdown" aria-expanded="false" role="button">
     アカウント<b class="caret"></b>
    </a>
    <ul class="dropdown-menu" role="menu">
      <li><%= link_to "ユーザー情報の編集", edit_user_path(current_user) %></li>
      <li class="devider"></li>
      <li>
        <%= link_to "ログアウト", logout_path, method: "delete" %>
      </li>
    </ul>
  </li>
<% else %>
  <li><%= link_to "ログイン", login_path %></li>
<% end %>
