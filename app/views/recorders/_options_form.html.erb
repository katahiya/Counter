<%= form_for(@recorder, url: recorder_recordabilities_path(@recorder),
  method: :post, remote: true) do |f| %>
  <%= f.fields_for @recordability do |fr| %>
    <div class="modal-content">
      <ul class="owl-carousel owl-theme modal-focused">
        <% @recorder.options.zip(new_fields_for(fr, :records)).each_slice(6) do |items| %>
          <li>
            <%= render 'options_form_body', items: items %>
          </li>
        <% end %>
      </ul>
    </div>
    <div class="modal-footer">
      <div class="modal-close waves-effect btn-flat">キャンセル</div>
      <%= f.submit recorder_recordabilities_path(@recorder), class: "modal-close waves-effect btn-flat" %>
    </div>
  <% end %>
<% end %>
