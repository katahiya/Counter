<%= form_for(@recorder, url: yield(:submit_url), remote: true) do |f| %>
  <div class="error_messages">
    <%= render 'shared/error_messages', object: f.object %>
  </div>

  <div class="field">
    <%= f.label :title, "新しい名前" %>
    <%= f.text_field :title, class: "form-control" %>
  </div>

  <%= render "shared/modal_form_buttons", f: f %>
<% end %>

