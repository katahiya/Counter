<% if @recorder.recordabilities.count == 0 %>
  <p>記録はまだありません</p>
<% else %>
  <%= form_tag({action: :delete_recordabilities, controller: :plural_actions } , { method: :get , remote: true}) do %>
    <div class="records-buttons">
      <%= submit_tag "削除", class: "plural_action_button", disabled: true %>
      <%= button_tag "全選択", type: 'button', class: "check_all" %>
      <span class="appear_checked"></span>
    </div>

    <div class="table-responsive records">
      <table class="table">
        <thead class="records-thead">
          <tr>
            <th class="record-select">選択</th>
            <th class="record-action">操作</th>
            <th class="record-no">No.</th>
            <th class="record-data">記録内容</th>
            <th class="record-count">数量</th>
          </tr>
        </thead>
        <%= render "recorders/records_tbody" %>
      </table>
    </div>
  <% end %>
<% end %>
</div>
