<% provide(:title, 'All counters') %>
<h1>All counters</h1>

<div class="setup-button"><%= link_to "create new", user_setup_path(@user), class: "btn btn-success" %></div>
<%= will_paginate %>

<div class="recorders">
  <div class="row">
    <% @recorders.each do |recorder| %>
      <div id="recorder-<%= recorder.id %>" class="col-md-8">
        <%= render recorder %>
      </div>
    <% end %>
  </div>
</div>

<%= will_paginate %>

<div id="edit-recorder_title" class="modal fade"></div>
