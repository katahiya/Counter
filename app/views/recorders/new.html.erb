<% provide(:title, 'Set up')%>
<h1>Set up</h1>

<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= form_for(@recorder) do |f| %>
      <div class="field">
        <%= f.label :titel %>
        <%= f.text_field :title %>
      </div>

<!TODO modify design!>
      <div id="options" class="form-group">
        <label>Options</label>
        <%= f.fields_for :options do |option_form| %>
          <%= render 'option_fields', f: option_form %>
          <div id="links">
            <%= link_to_add_association "Add option", f, :options %>
          </div>
        <% end %>
      </div>
      <div class="actions">
        <%= f.submit"Create recorder", class: "btn btn-primary" %>
      </div>
    <% end %>
  </div>
</div>
