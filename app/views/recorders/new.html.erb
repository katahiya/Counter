<% provide(:title, 'Set up')%>
<h1>Set up</h1>

<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= nested_form_for(@recorder) do |f| %>
      <div class="field">
        <%= f.label :titel %>
        <%= f.text_field :title %>
      </div>

<!TODO modify design!>
      <table id="options">
        <%= f.fields_for :options, wrapper: false %>
      </table>
      <%= f.link_to_add "Add option", :options, data: {target: "#options"} %>

      <div class="actions">
        <%= f.submit "Create recorder", class: "btn btn-primary" %>
      </div>
    <% end %>
  </div>
</div>
