<%= form_for(@recorder, url: yield(:submit_url), remote: true) do |f| %>
  <div class="error_messages">
    <%= render 'shared/error_messages', object: f.object %>
  </div>

  <div id="options" class="form-group">
    <label>Options</label>
    <%= f.fields_for :options do |option_form| %>
      <%= render 'option_fields', f: option_form %>
    <% end %>
    <div id="links">
      <%= link_to_add_association "Add option", f, :options %>
    </div>
  </div>
  <%= render "shared/modal_form_buttons", f: f %>
<% end %>
