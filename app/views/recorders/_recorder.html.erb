<div class="row">
  <div class="col-md-6">
    <div class="btn-group btn-group-xs">
      <button type="button" class="btn btn-default dropdown-toggle" data-toggle="dropdown" aria-expanded="false">
        <span class="caret"></span>
      </button>
      <ul class="dropdown-menu" role="menu">
        <li><%= link_to "edit title", edit_recorder_path(recorder), remote: true %></li>
        <li><%= link_to "edit options", recorder_options_path(recorder) %></li>
        <li><%= link_to "add options", recorder_add_options_path(recorder) %></li>
        <li><%= link_to "delete", recorder, method: :delete, data: { confirm: "You sure?" } %></li>
      </ul>
    </div>
    <%= link_to recorder.title, recorder, class: "title" %>
  </div>
</div>
<div class="row options-preview">
  <ul class="list-inline">
    <% recorder.options.each_with_index do |option, i| %>
      <li><%= option.name %></li>
    <% end %>
  </ul>
</div>
<hr>
