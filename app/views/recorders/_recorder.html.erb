<%= link_to recorder.title, recorder, class: "title" %>
<div class="btn-group btn-group-xs">
  <button type="button" class="btn btn-link dropdown-toggle" data-toggle="dropdown" aria-expanded="false">
    <span class="caret" aria-hidden="true"></span>
  </button>
  <ul class="dropdown-menu" role="menu">
    <li><%= link_to "編集", edit_recorder_path(recorder) %></li>
    <li><%= link_to "削除", delete_recorder_path(recorder), remote: true %></li>
  </ul>
</div>
<div class="row options-preview">
  <ul class="list-inline">
    <% recorder.options.each_with_index do |option, i| %>
      <% if i > 3 %>
        etc...
        <% break %>
      <% else %>
        <li><%= option.name %></li>
      <% end %>
    <% end %>
  </ul>
</div>
<% if recorder.records.any? %>
  <div class="updated">
      updated <%= recorder.records.last.created_at %>
  </div>
<% end %>
<hr>
