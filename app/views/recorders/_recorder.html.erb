<%= link_to "", recorder, class: "link" %>
<div class="heading">
  <div class="text">
    <%= recorder.title %>
  </div>
  <div class="dropdown">
    <a class="dropdown-toggle" data-toggle="dropdown" aria-expanded="false" href="#">
      <span class="caret" aria-hidden="true"></span></a>
    <ul class="dropdown-menu" role="menu">
      <li><%= link_to "編集", edit_recorder_path(recorder) %></li>
      <li><%= link_to "削除", delete_recorder_path(recorder), remote: true %></li>
    </ul>
  </div>
</div>
<div class="informations">
  <div class="row options-preview">
    <ul class="unstyled">
      <% recorder.options.each_with_index do |option, i| %>
        <li>
          <div class="text">
            <%= option.name %>
          </div>
        </li>
        <% if i > 1 %>
          <li class="etc">...</li>
          <% break %>
        <% end %>
      <% end %>
    </ul>
  </div>
  <div class="updated">
      更新: <%= time_ago_in_words(recorder.updated_at) %>前
  </div>
</div>
<hr>
